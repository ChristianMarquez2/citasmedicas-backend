# App
NODE_ENV=development
PORT=8080
API_PREFIX=/api/v1
APP_NAME=CitasMedicas-Backend

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<dbname>?retryWrites=true&w=majority

# JWT
JWT_SECRET=cambia_esto_por_un_secret_largo_unico
JWT_EXPIRES=60m   # 60m, 2h, 1d

# CORS (coma-separados, sin espacios)
CORS_ORIGINS=http://localhost:5173,https://citasmedicas-frontend.vercel.app

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000        # 1 min
RATE_LIMIT_MAX=100                # 100 req/min/IP

# MÃ©tricas / Salud
METRICS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_PATH=/health

# Logging
LOG_LEVEL=info                    # silent|error|warn|info|debug
REQUEST_LOG_FORMAT=combined

# Seeds (opcional)
DEFAULT_ADMIN_EMAIL=admin@demo.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!
DEFAULT_ADMIN_NAME=Admin

# Perf (para scripts)
PERF_BASE_URL=https://tu-backend.onrender.com
PERF_USERS_EMAIL=admin@demo.com
PERF_USERS_PASSWORD=ChangeMe123!
